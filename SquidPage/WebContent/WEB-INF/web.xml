<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<filter>
        <filter-name>Auth</filter-name>
        <filter-class>models.filter.Auth</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Auth</filter-name>
        <url-pattern>/home/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Authenticate</servlet-name>
        <jsp-file>/Authenticate.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Retrievejar</servlet-name>
        <servlet-class>models.controller.RetrieveJar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DBConnectionInit</servlet-name>
        <servlet-class>models.listener.DBConnectionInit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authenticate</servlet-name>
        <url-pattern>/Authenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DBConnectionInit</servlet-name>
        <url-pattern>/DBConnectionInit</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>models.listener.DBConnectionInit</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>Retrievejar</servlet-name>
        <url-pattern>/home/RetrieveJar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <init-param>
        <param-name>username</param-name>
        <param-value>root</param-value>
    </init-param>
    <init-param>
        <param-name>password</param-name>
        <param-value>003679</param-value>
    </init-param>
</web-app>
